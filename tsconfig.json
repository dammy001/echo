{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": false,
        "target": "es6",
        "isolatedModules": false,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
    },
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**tests**",
        "./**/*.d.ts"
    ]
}
